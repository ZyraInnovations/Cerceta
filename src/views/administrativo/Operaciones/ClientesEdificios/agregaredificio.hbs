    <script>
        $(document).ready(function(){
            $('#proveedorForm').on('submit', function(e){
                e.preventDefault();
                var formData = new FormData(this);
                $.ajax({
                    type: 'POST',
                    url: '/agregar-edificio',
                    data: formData,
                    processData: false,
                    contentType: false,
                    success: function(response) {
                        alert('Edificio agregado correctamente');
                        $('#proveedorForm')[0].reset();
                    },
                    error: function(err) {
                        alert('Error al agregar el proveedor');
                    }
                });
            });
        });
    </script>
