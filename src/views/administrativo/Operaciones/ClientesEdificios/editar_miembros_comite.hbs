<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Editar Miembros del Comité</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        /* General Page Styles */
        
        .container {
            max-width: 800px;
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            padding: 20px;
            margin: 20px;
        }
        
        /* Title Styling */
        h1 {
            text-align: center;
            color: #1E99D3;
            font-size: 2.2em;
            margin-bottom: 30px;
        }
        
        /* Form Styles */
        form {
            display: flex;
            flex-direction: column;
            gap: 20px;
        }

        /* Member Section */
        .member-edit-section {
            border: 1px solid #ddd;
            border-radius: 10px;
            padding: 20px;
            background-color: #fafafa;
        }
        .member-edit-section h3 {
            color: #413d4b;
            font-size: 1.5em;
            margin-bottom: 15px;
            display: flex;
            align-items: center;
            gap: 8px;
        }
        .member-edit-section h3 i {
            color: #C92458;
        }

        /* Label and Input Styles */
        label {
            font-weight: bold;
            color: #555;
            margin-bottom: 5px;
        }
        input[type="text"],
        input[type="tel"],
        input[type="email"] {
            width: 100%;
            padding: 10px;
            margin-bottom: 15px;
            border: 1px solid #ccc;
            border-radius: 5px;
            font-size: 1em;
            transition: border-color 0.3s;
        }
        input[type="text"]:focus,
        input[type="tel"]:focus,
        input[type="email"]:focus {
            border-color: #1E99D3;
            outline: none;
        }

        /* Submit Button */
        button[type="submit"] {
            background-color: #1E99D3;
            color: white;
            font-size: 1.2em;
            font-weight: bold;
            padding: 12px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s;
        }
        button[type="submit"]:hover {
            background-color: #C92458;
        }
    </style>
</head>
<body>

<div class="container">
    <h1>Editar Miembros del Comité <i class="fas fa-users"></i></h1>
    <form action="/guardar_miembros_comite" method="POST">
        <input type="hidden" name="edificioId" value="{{edificio.id}}">

        <!-- Miembro 1 -->
        <div class="member-edit-section">
            <h3><i class="fas fa-user"></i> Miembro 1</h3>
            <label for="miembro_comite1_nombre"><i class="fas fa-id-badge"></i> Nombre:</label>
            <input type="text" id="miembro_comite1_nombre" name="miembro_comite1_nombre" value="{{edificio.miembro_comite1_nombre}}" required>
            
            <label for="miembro_comite1_cedula"><i class="fas fa-id-card"></i> Cédula:</label>
            <input type="text" id="miembro_comite1_cedula" name="miembro_comite1_cedula" value="{{edificio.miembro_comite1_cedula}}" required>
            
            <label for="miembro_comite1_celular"><i class="fas fa-phone"></i> Celular:</label>
            <input type="tel" id="miembro_comite1_celular" name="miembro_comite1_celular" value="{{edificio.miembro_comite1_celular}}" required>
            
            <label for="miembro_comite1_correo"><i class="fas fa-envelope"></i> Correo:</label>
            <input type="email" id="miembro_comite1_correo" name="miembro_comite1_correo" value="{{edificio.miembro_comite1_correo}}" required>
        </div>

        <!-- Miembro 2 -->
        <div class="member-edit-section">
            <h3><i class="fas fa-user"></i> Miembro 2</h3>
            <label for="miembro_comite2_nombre"><i class="fas fa-id-badge"></i> Nombre:</label>
            <input type="text" id="miembro_comite2_nombre" name="miembro_comite2_nombre" value="{{edificio.miembro_comite2_nombre}}" required>
            
            <label for="miembro_comite2_cedula"><i class="fas fa-id-card"></i> Cédula:</label>
            <input type="text" id="miembro_comite2_cedula" name="miembro_comite2_cedula" value="{{edificio.miembro_comite2_cedula}}" required>
            
            <label for="miembro_comite2_celular"><i class="fas fa-phone"></i> Celular:</label>
            <input type="tel" id="miembro_comite2_celular" name="miembro_comite2_celular" value="{{edificio.miembro_comite2_celular}}" required>
            
            <label for="miembro_comite2_correo"><i class="fas fa-envelope"></i> Correo:</label>
            <input type="email" id="miembro_comite2_correo" name="miembro_comite2_correo" value="{{edificio.miembro_comite2_correo}}" required>
        </div>

        <!-- Miembro 3 -->
        <div class="member-edit-section">
            <h3><i class="fas fa-user"></i> Miembro 3</h3>
            <label for="miembro_comite3_nombre"><i class="fas fa-id-badge"></i> Nombre:</label>
            <input type="text" id="miembro_comite3_nombre" name="miembro_comite3_nombre" value="{{edificio.miembro_comite3_nombre}}" required>
            
            <label for="miembro_comite3_cedula"><i class="fas fa-id-card"></i> Cédula:</label>
            <input type="text" id="miembro_comite3_cedula" name="miembro_comite3_cedula" value="{{edificio.miembro_comite3_cedula}}" required>
            
            <label for="miembro_comite3_celular"><i class="fas fa-phone"></i> Celular:</label>
            <input type="tel" id="miembro_comite3_celular" name="miembro_comite3_celular" value="{{edificio.miembro_comite3_celular}}" required>
            
            <label for="miembro_comite3_correo"><i class="fas fa-envelope"></i> Correo:</label>
            <input type="email" id="miembro_comite3_correo" name="miembro_comite3_correo" value="{{edificio.miembro_comite3_correo}}" required>
        </div>

        <button type="submit"><i class="fas fa-save"></i> Guardar Cambios</button>
    </form>
</div>
    <script>
  document.addEventListener("DOMContentLoaded", () => {
    // Seleccionar elementos del DOM
    const hamburgerMenu = document.getElementById("hamburger-menu");
    const sidebar = document.getElementById("sidebar");

    if (hamburgerMenu && sidebar) {
      // Agregar el evento de clic al ícono de hamburguesa
      hamburgerMenu.addEventListener("click", () => {
        console.log("Hamburguesa clickeada");
        sidebar.classList.toggle("open"); // Alternar clase 'open'
      });
    } else {
      console.error("No se encontró el menú hamburguesa o el sidebar.");
    }
  });
</script>

</body>
</html>
