<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <!-- Tailwind CSS CDN -->
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  <title>Consulta de Actas de Puestos</title>
  <!-- Estilos adicionales para PDF -->
  <style>
    /* Estilos para que los colores y sombras se mantengan en la impresi√≥n/PDF */
    @media print {
      body {
        -webkit-print-color-adjust: exact;
      }
      .shadow, .rounded-lg {
        box-shadow: none !important;
      }
    }
  </style>
</head>
<body class="bg-gray-100 p-6">
  <h1 class="text-2xl font-bold text-gray-800 mb-6">üìã Consulta de Actas de Puestos</h1>

  <form method="POST" action="/Consulta_acta_puestos" class="flex flex-wrap items-end gap-4 bg-white shadow rounded-lg p-4 mb-8">
    <div>
      <label class="block text-sm font-medium text-gray-700 mb-1">Desde:</label>
      <input type="date" name="desde" required class="border rounded px-3 py-2 text-sm shadow-sm w-48" value="{{desde}}">
    </div>
    <div>
      <label class="block text-sm font-medium text-gray-700 mb-1">Hasta:</label>
      <input type="date" name="hasta" required class="border rounded px-3 py-2 text-sm shadow-sm w-48" value="{{hasta}}">
    </div>
    <button type="submit" class="mt-6 bg-blue-600 hover:bg-blue-700 text-white px-5 py-2 rounded text-sm font-semibold shadow">
      Consultar
    </button>
  </form>

  {{#if registros.length}}
    <div class="space-y-6">
      {{#each registros}}
        <div class="border rounded-lg shadow-md overflow-hidden bg-white">
          <!-- Cabecera -->
          <div class="flex justify-between items-center px-6 py-3 bg-gradient-to-r from-blue-100 to-white border-b">
            <div class="text-sm text-gray-800 space-y-1">
              <p><strong>üìÖ Fecha:</strong> {{this.fecha}}</p>
              <p><strong>üìç Puesto:</strong> {{this.nombre_puesto}}</p>
              <p><strong>üè¢ Empresa Recibe:</strong> {{this.empresa_recibe}}</p>
              <p><strong>üè¢ Empresa Entrega:</strong> {{this.empresa_entrega}}</p>
            </div>
            <div class="flex flex-col gap-2 items-end">
              <button onclick="toggleDetalle('{{this.id}}')" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-1 rounded text-sm shadow">
                Ver Detalles
              </button>
              <button onclick="descargarPDF('{{this.id}}')" class="bg-green-600 hover:bg-green-700 text-white px-4 py-1 rounded text-sm shadow">
                Descargar PDF
              </button>
            </div>
          </div>

          <!-- Detalle desplegable -->
          <div id="acta-{{this.id}}" class="hidden px-6 py-6 text-sm space-y-6">
            <!-- ENCABEZADO PROFESIONAL CON LOGO -->
            <div class="flex justify-between items-center border-b pb-4 mb-4">
              <div class="flex items-center gap-4">
                <img src="/imagenes/Recurso 1hdpi.png" alt="Logo CERCETA" class="h-16">
                <div>
                  <h1 class="text-2xl font-bold text-gray-800 uppercase">CERCETA</h1>
                  <p class="text-sm text-gray-600">Soluciones Empresariales</p>
                </div>
              </div>
              <div class="text-right text-xs text-gray-500">
                <p>SST-OP-02</p>
                <p>Versi√≥n: 01</p>
                <p>Fecha: {{this.fecha}}</p>
                <p>P√°gina 1 de 1</p>
              </div>
            </div>

            <!-- Datos generales -->
            <div class="grid md:grid-cols-2 gap-4">
              <div>
                <p><strong>‚è∞ Hora:</strong> {{this.hora}}</p>
                <p><strong>‚öôÔ∏è Instalaci√≥n:</strong> {{#if this.instalacion}}S√≠{{else}}No{{/if}}</p>
                <p><strong>üîß Levantamiento:</strong> {{#if this.levantamiento}}S√≠{{else}}No{{/if}}</p>
              </div>
              <div>
                <p><strong>üë§ Responsable Recibe:</strong> {{this.responsable_recibe}}</p>
                <p><strong>üë§ Responsable Entrega:</strong> {{this.responsable_entrega}}</p>
                <p><strong>üë§ Representante Cliente:</strong> {{this.representante_cliente}}</p>
              </div>
              <div class="md:col-span-2">
                <p><strong>üìù Observaciones:</strong> {{this.observaciones}}</p>
              </div>
            </div>

            <!-- Propiedad del Cliente -->
            {{#if this.propiedad_cliente.length}}
            <div>
              <h3 class="text-lg font-semibold text-gray-800 border-b pb-1 mb-2">üì¶ Propiedad del Cliente</h3>
              <table class="w-full text-xs border rounded-lg overflow-hidden">
                <thead class="bg-gray-100 text-left">
                  <tr>
                    <th class="border px-3 py-2">Art√≠culo</th>
                    <th class="border px-3 py-2">Cantidad</th>
                    <th class="border px-3 py-2">Estado</th>
                    <th class="border px-3 py-2">Observaciones</th>
                  </tr>
                </thead>
                <tbody>
                  {{#each this.propiedad_cliente}}
                  <tr class="hover:bg-gray-50">
                    <td class="border px-3 py-1">{{this.articulo}}</td>
                    <td class="border px-3 py-1">{{this.cantidad}}</td>
                    <td class="border px-3 py-1">{{this.estado}}</td>
                    <td class="border px-3 py-1">{{this.observaciones}}</td>
                  </tr>
                  {{/each}}
                </tbody>
              </table>
            </div>
            {{/if}}

            <!-- Inventario del Puesto -->
            {{#if this.inventario_puesto.length}}
            <div>
              <h3 class="text-lg font-semibold text-gray-800 border-b pb-1 mb-2">üìã Inventario del Puesto</h3>
              <table class="w-full text-xs border rounded-lg overflow-hidden">
                <thead class="bg-gray-100 text-left">
                  <tr>
                    <th class="border px-3 py-2">Art√≠culo</th>
                    <th class="border px-3 py-2">Cantidad</th>
                    <th class="border px-3 py-2">Estado</th>
                    <th class="border px-3 py-2">Observaciones</th>
                  </tr>
                </thead>
                <tbody>
                  {{#each this.inventario_puesto}}
                  <tr class="hover:bg-gray-50">
                    <td class="border px-3 py-1">{{this.articulo}}</td>
                    <td class="border px-3 py-1">{{this.cantidad}}</td>
                    <td class="border px-3 py-1">{{this.estado}}</td>
                    <td class="border px-3 py-1">{{this.observaciones}}</td>
                  </tr>
                  {{/each}}
                </tbody>
              </table>
            </div>
            {{/if}}

            <!-- Firmas -->
            <div class="grid md:grid-cols-3 gap-4 text-center mt-6">
              <div>
                <p class="font-semibold mb-1">üñä Firma Cliente</p>
                <img src="{{this.firma_cliente}}" alt="Firma cliente" class="border bg-gray-50 h-32 w-full object-contain rounded-md shadow-sm">
              </div>
              <div>
                <p class="font-semibold mb-1">üñä Firma Recibe</p>
                <img src="{{this.firma_recibe}}" alt="Firma recibe" class="border bg-gray-50 h-32 w-full object-contain rounded-md shadow-sm">
              </div>
              <div>
                <p class="font-semibold mb-1">üñä Firma Entrega</p>
                <img src="{{this.firma_entrega}}" alt="Firma entrega" class="border bg-gray-50 h-32 w-full object-contain rounded-md shadow-sm">
              </div>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  {{else}}
    <p class="mt-6 text-sm text-gray-600">No se encontraron actas en el rango seleccionado.</p>
  {{/if}}

  <!-- Se carga la librer√≠a html2pdf una √∫nica vez -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/html2pdf.js/0.10.1/html2pdf.bundle.min.js"></script>
  <script>
    // Funci√≥n para mostrar u ocultar detalles
    function toggleDetalle(id) {
      const detalle = document.getElementById('acta-' + id);
      detalle.classList.toggle('hidden');
    }

    function descargarPDF(id) {
      const contenido = document.getElementById('acta-' + id);
      // Aseguramos que el contenido est√© visible
      contenido.classList.remove('hidden');

      const opciones = {
        margin: [0.5, 0.5, 0.5, 0.5],
        filename: `acta_puesto_${id}.pdf`,
        image: { type: 'jpeg', quality: 0.98 },
        html2canvas: { scale: 3, useCORS: true, scrollY: -window.scrollY },
        jsPDF: { unit: 'in', format: 'letter', orientation: 'portrait' }
      };

      // Si el dispositivo tiene ancho menor a 1024px, se clona el contenido en un contenedor de ancho fijo
      if (window.innerWidth < 1024) {
        const clonContenido = contenido.cloneNode(true);
        clonContenido.classList.remove('hidden');
        
        const contenedorTemp = document.createElement('div');
        contenedorTemp.style.width = '1024px';  // ancho fijo para simular vista de PC
        contenedorTemp.style.margin = '0 auto';
        contenedorTemp.appendChild(clonContenido);
        
        document.body.appendChild(contenedorTemp);
        html2pdf().set(opciones).from(contenedorTemp).save().then(() => {
          document.body.removeChild(contenedorTemp);
        });
      } else {
        // Si est√° en PC (o ancho mayor), se usa el contenido original
        html2pdf().set(opciones).from(contenido).save();
      }
    }
  </script>
</body>
</html>
