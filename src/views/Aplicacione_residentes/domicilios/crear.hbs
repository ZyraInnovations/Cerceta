    const result = await response.json();
    if (result.success) {
      form.reset();
      document.getElementById('sliderHandle').style.left = '0px';
      document.getElementById('imagePreview').innerHTML = '';
      // Reproducir animación GIF y luego recargar
      playGifAndReload();
    } else {
