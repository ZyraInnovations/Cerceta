    <main>
        <div class="login">
            <h2 class="active">Sign In</h2>
            <h2 class="nonactive">Sign Up</h2>
<form method="POST" action="/auth">
    <input name="email" type="email" class="text" placeholder="Correo electrónico">
    <span>Email</span><br>
    <input name="password" type="password" class="text" placeholder="Contraseña">
    <span>Password</span><br>
    <input type="checkbox" id="checkbox-1-1" class="custom-checkbox">
    <label for="checkbox-1-1">Keep me Signed in</label>

    <button class="entrar">Entrar</button>
    <hr>
<a id="forgotPasswordLink" href="#">olvistaste tu contraseña?</a>
    <!-- Error message display -->
    {{#if error}}
        <p class="error-message">{{error}}</p>
    {{/if}}
</form>

<form id="forgotPasswordForm" method="POST" action="/forgot-password" style="display: none;">
    <h2>Forgot Password?</h2>
    <input name="email" type="email" class="text" placeholder="Correo electrónico">
    <input type="hidden" id="emailSent" name="emailSent" value="false"> <!-- Campo oculto para controlar el envío de correo -->
    <button id="sendEmailButton" class="signin">Enviar</button>
    <p class="message">Te enviaremos un correo electrónico con instrucciones para recuperar tu contraseña.</p>
    <hr>
</form>

        </div>
    </main>
    <script>
    document.addEventListener("DOMContentLoaded", function() {
        const forgotPasswordLink = document.querySelector("#forgotPasswordLink");
        const forgotPasswordForm = document.querySelector("#forgotPasswordForm");

        // Escucha el clic en el enlace "Forgot Password?"
        forgotPasswordLink.addEventListener("click", function(event) {
            event.preventDefault(); // Previene el comportamiento por defecto del enlace
            forgotPasswordForm.style.display = "block"; // Muestra el formulario de olvidaste tu contraseña
        });
    });
</script>
<script>
document.addEventListener("DOMContentLoaded", function() {
    const forgotPasswordLink = document.querySelector("#forgotPasswordLink");
    const forgotPasswordForm = document.querySelector("#forgotPasswordForm");
    const sendEmailButton = document.querySelector("#sendEmailButton");
    const emailSentInput = document.querySelector("#emailSent");

    // Escucha el clic en el enlace "Forgot Password?"
    forgotPasswordLink.addEventListener("click", function(event) {
        event.preventDefault(); // Previene el comportamiento por defecto del enlace
        forgotPasswordForm.style.display = "block"; // Muestra el formulario de olvidaste tu contraseña
    });

    // Escucha el envío del formulario de recuperación de contraseña
    forgotPasswordForm.addEventListener("submit", function(event) {
        event.preventDefault(); // Previene el comportamiento por defecto del formulario

        // Verifica si ya se envió el correo
        const emailSent = emailSentInput.value === "true";
        if (emailSent) {
            console.log("Correo ya enviado, evitando enviar nuevamente.");
            return;
        }

        // Cambia el valor del campo oculto para indicar que se envió el correo
        emailSentInput.value = "true";

        // Envía el formulario
        this.submit();
    });
});
