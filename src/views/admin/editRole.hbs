        }

        .button {
            display: inline-block;
            background-color: #90c9a7;
            color: #fff;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
            text-decoration: none;
            /* Agregué esta propiedad */
        }

        .button:hover {
            background-color: #5a8f77;
        }

        .back-button {
            text-align: center;
            margin-top: 20px;
        }

        .back-button a {
            color: #fff;
            text-decoration: none;
            font-weight: bold;
            transition: color 0.3s ease;
            display: inline-block;
            /* Agregué esta propiedad */
            background-color: #5a8f77;
            /* Cambié el color de fondo */
            padding: 10px 20px;
            /* Ajusté el espaciado */
            border-radius: 5px;
            /* Agregué bordes redondeados */
            margin-right: 10px;
            /* Añadí margen derecho */
        }

        .back-button a:hover {
            color: #ccc;
        }

        .note {
            position: absolute;
            top: 290px;
            right: 20px;
            background-color: #90c9a7;
            color: #fff;
            padding: 10px;
            border-radius: 5px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        }

        .note ul {
            padding-left: 20px;
            margin-top: 5px;
        }

        .note ul li {
            margin-bottom: 5px;
        }
       
         footer {
